<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/runeLayout"
    android:backgroundTintMode="add"
    android:clickable="false">



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runeList"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AmountHeading"
        android:divider="@null"
        android:dividerHeight="0dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rune"
        android:id="@+id/runeHeading"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount"
        android:id="@+id/AmountHeading"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/runeHeading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/NameHeading"
        android:layout_above="@+id/runeList"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Info"
        android:id="@+id/InfoHeading"
        android:layout_marginEnd="54dp"
        android:layout_alignTop="@+id/AmountHeading"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Summoner Runes"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>